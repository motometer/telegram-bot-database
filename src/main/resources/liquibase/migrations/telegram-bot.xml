<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="telegram_users_create" author="Viacheslav Bychkovskyi">
        <createTable tableName="telegram_users">
            <column name="id" type="bigint">
                <constraints primaryKey="true"/>
            </column>
            <column name="telegram_user_id" type="bigint"/>
            <column name="first_name" type="varchar(255)"/>
            <column name="last_name" type="varchar(255)"/>
            <column name="username" type="varchar(255)"/>
            <column name="is_bot" type="boolean"/>
            <column name="language_code" type="varchar(8)"/>
        </createTable>

        <createIndex tableName="telegram_users" indexName="tg_usr_id_idx">
            <column name="id"/>
        </createIndex>
        <createIndex tableName="telegram_users" indexName="tg_usr_tg_id_idx">
            <column name="id"/>
        </createIndex>
        <createSequence sequenceName="telegram_users_seq"/>
    </changeSet>

</databaseChangeLog>